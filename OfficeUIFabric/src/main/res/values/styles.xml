<resources xmlns:tools="http://schemas.android.com/tools">

    <!--UIFabric application theme-->
    <style name="Theme.UIFabric" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/uifabric_primary</item>
        <item name="colorPrimaryDark">@color/uifabric_primary_dark</item>
        <item name="colorAccent">@color/uifabric_primary</item>
        <item name="android:textColorPrimary">@color/uifabric_black</item>
        <item name="buttonStyle">@style/Widget.UIFabric.Button</item>
        <item name="toolbarStyle">@style/Theme.UIFabric.Toolbar</item>

        <!-- *** Theme Semantic Colors *** -->

        <item name="uifabricColorPrimaryLight">@color/uifabric_communication_tint_20</item>
        <item name="uifabricColorPrimaryExtraLight">@color/uifabric_communication_tint_40</item>

        <!-- *** Base Semantic Colors *** -->

        <item name="uifabricBackgroundColor">@color/uifabric_background</item>
        <item name="uifabricForegroundColor">@color/uifabric_foreground</item>
        <item name="uifabricDividerColor">@color/uifabric_border_light_gray</item>

        <!-- *** Semantic Colors *** -->

        <!--Button-->
        <item name="uifabricButtonBackgroundDefaultColor">?attr/colorPrimary</item>
        <item name="uifabricButtonBackgroundDisabledColor">@color/uifabric_background_gray</item>
        <item name="uifabricButtonTextDefaultColor">@color/uifabric_white</item>
        <item name="uifabricButtonTextDisabledColor">@color/uifabric_border_gray</item>

        <!--Button Borderless-->
        <item name="uifabricButtonBorderlessBackgroundDefaultColor">@android:color/transparent</item>
        <item name="uifabricButtonBorderlessBackgroundDisabledColor">@android:color/transparent</item>
        <item name="uifabricButtonBorderlessTextDefaultColor">?attr/colorPrimary</item>

        <!--CalendarView-->
        <item name="uifabricCalendarBackgroundColor">?attr/uifabricBackgroundColor</item>
        <item name="uifabricCalendarWeekHeadingBackgroundColor">?attr/uifabricBackgroundColor</item>
        <item name="uifabricCalendarWeekHeadingWeekDayTextColor">@color/uifabric_gray</item>
        <item name="uifabricCalendarWeekHeadingWeekendTextColor">@color/uifabric_border_gray</item>
        <item name="uifabricCalendarMonthOverlayBackgroundColor">?attr/uifabricBackgroundColor</item>
        <item name="uifabricCalendarMonthOverlayTextColor">?attr/uifabricForegroundColor</item>
        <item name="uifabricCalendarOtherMonthBackgroundColor">@color/uifabric_background_light_gray</item>
        <item name="uifabricCalendarSelectedColor">?attr/colorPrimary</item>
        <item name="uifabricCalendarDayTodayBackgroundColor">?attr/uifabricColorPrimaryExtraLight</item>
        <!--weekday selector-->
        <item name="uifabricCalendarWeekDayTextActiveColor">?attr/colorPrimary</item>
        <item name="uifabricCalendarWeekDayTextActiveCheckedColor">@color/uifabric_white</item>
        <item name="uifabricCalendarWeekDayTextInactiveCheckedColor">@color/uifabric_white</item>
        <item name="uifabricCalendarWeekDayTextDefaultColor">@color/uifabric_gray</item>

        <!--DateTimePicker-->
        <item name="uifabricDateTimePickerToolbarTitleTextColor">?attr/colorPrimary</item>
        <item name="uifabricDateTimePickerTabTextColor">@color/uifabric_gray</item>
        <item name="uifabricDateTimePickerDialogBackgroundColor">?attr/uifabricBackgroundColor</item>
        <item name="uifabricDateTimePickerToolbarIconColor">?attr/colorPrimary</item>

        <!--Drawer-->
        <item name="uifabricDrawerBackgroundColor">?attr/uifabricBackgroundColor</item>

        <!--ListItemView-->
        <item name="uifabricListItemBackgroundColor">?attr/uifabricBackgroundColor</item>
        <item name="uifabricListItemTitleColor">?attr/uifabricForegroundColor</item>
        <item name="uifabricListItemSubtitleColor">@color/uifabric_list_item_subtitle</item>
        <item name="uifabricListItemRippleColor">@color/uifabric_list_item_background_ripple</item>

        <!--NumberPicker-->
        <item name="uifabricNumberPickerBackgroundColor">?attr/uifabricBackgroundColor</item>
        <item name="uifabricNumberPickerDefaultTextColor">@color/uifabric_gray</item>
        <item name="uifabricNumberPickerSelectedTextColor">?attr/colorPrimary</item>

        <!--Progress-->
        <item name="uifabricProgressPrimaryColor">?attr/colorPrimary</item>

        <!--Snackbar-->
        <item name="uifabricSnackbarBackgroundColor">@color/uifabric_black</item>
        <item name="uifabricSnackbarBackgroundAnnouncementColor">?attr/colorPrimary</item>
        <item name="uifabricSnackbarTextColor">@color/uifabric_white</item>
        <item name="uifabricSnackbarActionTextColor">?attr/uifabricColorPrimaryLight</item>
        <item name="uifabricSnackbarActionTextAnnouncementColor">@color/uifabric_white</item>

        <!--TabLayout-->
        <item name="uifabricTabLayoutBackgroundColor">?attr/uifabricBackgroundColor</item>
        <item name="uifabricTabTextColor">@color/uifabric_gray</item>
        <item name="uifabricTabSelectedTextColor">?attr/colorPrimary</item>
        <item name="uifabricTabIndicatorColor">?attr/colorPrimary</item>

        <!--Toolbar-->
        <item name="uifabricToolbarTitleTextColor">@color/uifabric_white</item>
        <item name="uifabricToolbarSubtitleTextColor">@color/uifabric_white</item>

        <!--Tooltip-->
        <item name="uifabricTooltipBackgroundColor">@color/uifabric_black</item>
        <item name="uifabricTooltipTextColor">@color/uifabric_white</item>
    </style>

    <style name="Widget.UIFabric" parent="@android:style/Widget"/>

    <!--Button-->
    <style name="Widget.UIFabric.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <!--This foreground attribute brings back the ripple effect after setting background-->
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.UIFabric.Button</item>
        <item name="android:paddingStart">@dimen/uifabric_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/uifabric_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/uifabric_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/uifabric_button_padding_vertical</item>
        <item name="android:minHeight">@dimen/uifabric_button_min_height</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>
    <!--We use Borderless button style as the parent to avoid drop shadow issues in some APIs.-->
    <style name="Widget.UIFabric.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_borderless_background</item>
        <!--This foreground attribute brings back the ripple effect after setting background-->
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.UIFabric.Button.Borderless</item>
        <item name="android:paddingStart">@dimen/uifabric_button_borderless_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/uifabric_button_borderless_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/uifabric_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/uifabric_button_padding_vertical</item>
        <item name="android:minHeight">@dimen/uifabric_button_min_height</item>
    </style>

    <!--Dialog-->
    <style name="Dialog.UIFabric" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@color/uifabric_white</item>
        <item name="android:colorBackgroundCacheHint">@color/uifabric_white</item>
        <item name="android:textAppearance">@style/TextAppearance.UIFabric.Title1</item>
    </style>

    <!--Drawer-->
    <style name="Drawer.UIFabric" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Drawer.UIFabric.Animation</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="Drawer.UIFabric.Animation">
        <item name="android:windowEnterAnimation">@anim/drawer_background_fade_in</item>
        <item name="android:windowExitAnimation">@anim/drawer_background_fade_out</item>
    </style>

    <!--NumberPicker-->
    <style name="Widget.UIFabric.NumberPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">@dimen/uifabric_date_time_picker_fading_edge_length</item>
        <item name="solidColor">@android:color/transparent</item>
        <item name="internalMinWidth">@dimen/uifabric_date_time_picker_internal_min_width</item>
        <item name="internalMaxHeight">@dimen/uifabric_date_time_picker_max_height</item>
        <item name="selectorWheelItemCount">7</item>
        <item name="textAlign">center</item>
        <item name="android:paddingRight">@dimen/uifabric_date_time_picker_padding_right</item>
    </style>

    <!--Progress: Circular-->
    <style name="Widget.UIFabric.CircularProgress.XSmall" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:contentDescription">@string/progress_circular_content_description_indeterminate</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/anim_progress_circular_gray_xsmall</item>
        <item name="android:minHeight">@dimen/uifabric_progress_circular_xsmall</item>
        <item name="android:minWidth">@dimen/uifabric_progress_circular_xsmall</item>
        <item name="android:maxHeight">@dimen/uifabric_progress_circular_xsmall</item>
        <item name="android:maxWidth">@dimen/uifabric_progress_circular_xsmall</item>
    </style>
    <style name="Widget.UIFabric.CircularProgress.Small" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:contentDescription">@string/progress_circular_content_description_indeterminate</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/anim_progress_circular_gray_small</item>
        <item name="android:minHeight">@dimen/uifabric_progress_circular_small</item>
        <item name="android:minWidth">@dimen/uifabric_progress_circular_small</item>
        <item name="android:maxHeight">@dimen/uifabric_progress_circular_small</item>
        <item name="android:maxWidth">@dimen/uifabric_progress_circular_small</item>
    </style>
    <style name="Widget.UIFabric.CircularProgress.Medium" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:contentDescription">@string/progress_circular_content_description_indeterminate</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/anim_progress_circular_gray_medium</item>
        <item name="android:minHeight">@dimen/uifabric_progress_circular_medium</item>
        <item name="android:minWidth">@dimen/uifabric_progress_circular_medium</item>
        <item name="android:maxHeight">@dimen/uifabric_progress_circular_medium</item>
        <item name="android:maxWidth">@dimen/uifabric_progress_circular_medium</item>
    </style>
    <style name="Widget.UIFabric.CircularProgress.Large" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:contentDescription">@string/progress_circular_content_description_indeterminate</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/anim_progress_circular_gray_large</item>
        <item name="android:minHeight">@dimen/uifabric_progress_circular_large</item>
        <item name="android:minWidth">@dimen/uifabric_progress_circular_large</item>
        <item name="android:maxHeight">@dimen/uifabric_progress_circular_large</item>
        <item name="android:maxWidth">@dimen/uifabric_progress_circular_large</item>
    </style>
    <style name="Widget.UIFabric.CircularProgress.XSmall.Primary">
        <item name="android:indeterminateTint">?attr/uifabricProgressPrimaryColor</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>
    <style name="Widget.UIFabric.CircularProgress.Small.Primary">
        <item name="android:indeterminateTint">?attr/uifabricProgressPrimaryColor</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>
    <style name="Widget.UIFabric.CircularProgress.Medium.Primary">
        <item name="android:indeterminateTint">?attr/uifabricProgressPrimaryColor</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>
    <style name="Widget.UIFabric.CircularProgress.Large.Primary">
        <item name="android:indeterminateTint">?attr/uifabricProgressPrimaryColor</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <!--TabLayout-->
    <style name="Widget.UIFabric.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TextAppearance.UIFabric.Tab.Light</item>
        <item name="tabMinWidth">90dp</item>
        <item name="tabSelectedTextColor">?attr/uifabricTabSelectedTextColor</item>
        <item name="tabIndicatorColor">?attr/uifabricTabIndicatorColor</item>
        <item name="android:background">?attr/uifabricTabLayoutBackgroundColor</item>
    </style>

    <!--Toolbar-->
    <style name="Theme.UIFabric.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.UIFabric.ToolbarTitle</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.UIFabric.ToolbarSubtitle</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.UIFabric.NavigationButton</item>
    </style>
    <style name="Widget.UIFabric.NavigationButton" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">@dimen/uifabric_toolbar_navigation_icon_container_size</item>
        <item name="android:minHeight">@dimen/uifabric_toolbar_navigation_icon_container_size</item>
    </style>

</resources>
