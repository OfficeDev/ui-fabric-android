<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- *** UIFabric Theme *** -->

    <style name="TextAppearance.UIFabric" parent="TextAppearance.AppCompat"/>

    <style name="TextAppearance.UIFabric.Headline">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
    </style>

    <style name="TextAppearance.UIFabric.Title1">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="TextAppearance.UIFabric.Title2">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <style name="TextAppearance.UIFabric.Heading">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <style name="TextAppearance.UIFabric.SubHeading">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <style name="TextAppearance.UIFabric.SubHeading2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="TextAppearance.UIFabric.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <style name="TextAppearance.UIFabric.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="TextAppearance.UIFabric.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <!-- *** UIFabric Base Semantic Slots *** -->

    <style name="TextAppearance.UIFabric.ListItemLabel" parent="TextAppearance.UIFabric.SubHeading">
        <item name="android:textColor">@color/uifabric_gray</item>
    </style>
    <style name="TextAppearance.UIFabric.LightCaption" parent="TextAppearance.UIFabric.Caption">
        <item name="android:textColor">@color/uifabric_gray</item>
    </style>

</resources>